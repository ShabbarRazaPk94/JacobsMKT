<%= form_for(@item) do |f| %>  
  <div class="field"> 
    <%= f.label :item %><br> 
    <%= f.text_area :name %>
    <%= f.number_field :price, :class => 'text_field', :step => 'any'%>
    <%= f.text_area :description %>
  </div> 
  <div class="actions"> 
    <%= f.submit "Post" %> 
  </div> 
<% end %>
